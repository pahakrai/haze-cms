  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "postinstall": "patch-package",
    "i": "yarn install --frozen-lockfile",
    "prestart": "yarn seed:ts --clear",
    "build": "nest build && bash move-gql-schema.sh",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "seed:ts": "node -r ts-node/register -r tsconfig-paths/register src/seeder.ts",
    "deploy:testing": "SSH_KEY_PATH=~/.ssh/aws-dev.pem DEPLOY_HOST=aws-dev bash deploy.sh",
    "deploy:production": "SSH_KEY_PATH=~/.ssh/api.pem DEPLOY_HOST=api bash deploy.sh",
    "deploy:production:drikids": "SSH_KEY_PATH=~/.ssh/drikids-api.pem DEPLOY_HOST=drikids-api bash deploy.sh",
    "deploy:production:firstjob": "SSH_KEY_PATH=~/.ssh/firstjob-api.pem DEPLOY_HOST=firstjob-api bash deploy.sh",
    "deploy:production:taxiapp": "SSH_KEY_PATH=~/.ssh/taxiapp-api.pem DEPLOY_HOST=taxiapp-api bash deploy.sh",
    "start": "cross-env NODE_ENV=development TS_NODE_TRANSPILE_ONLY=true node -r ts-node/register -r tsconfig-paths/register src/main.ts"
  },
  "husky": {
    "hooks": {
      "post-merge": "yarn i"
    }
  },
