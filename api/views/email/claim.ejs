
<%- include('../_layout/head') %>

<html>
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0, user-scalable=no" />
  <head>
    <style>
      table,
      td,
      p {
        font-family: 'PingFangHK', Helvetica, Arial, sans-serif;
        font-size: 16px;
        line-height: 24px;
        margin-bottom: 20px;
      }
      .pstyle {
        color: #5e5e5e;
        margin: 0;
        font-size: 18px;
        line-height: 24px;
      }
      body {
        margin: 0;
        padding: 0;
      }
    </style>
  </head>
    <body>
    <table
      border="0"
      cellspacing="0"
      cellpadding="0"
      style="padding:0 20px 0 20px;
    margin: 0 auto;background-color: #F9F9F9;"
      width="600px"
    >
      <tbody style="background-color:#fff">
        <tr>
          <td style="padding: 0 0 0 10px;">
            <table width="100%" border="0" cellpadding="5" cellspacing="0">
              <tbody>
                <tr>
                  <td>
                    <br />
                        <% if (data.uri) { %>
                        <p style="padding: 10px 0px 10px 0px;"><%=data.examineContent %></p>
                            <a
                        href="<%=data.uri%>"
                        target="_blank"
                        style="padding: 8px 12px; background: #FF6100; color: #fff;border-radius: 3px;text-decoration: none;font-weight:bold;display: inline-block;"
                      >
                        <strong> <%=data.examineUrl%> </strong>
                      </a>
                          <%
                      } %>
                     <div>
                      <% if (data.approveContent && !data.isDecline)
                        { %>
                        <p style="color:#2D2D2D; font-size:16px;line-height:24px;margin-bottom: 20px">
                         <strong><%=data.toName%>, &nbsp; <%=data.hi%> </strong>
                        </p>
                        <p><%=data.approveContent%></p>
                        <%
                        } %>
                      </div>

                      <div>
                       <% if (data.declineContent && data.isDecline)
                       { %>
                          <p style="color:#2D2D2D; font-size:16px;line-height:24px;margin-bottom: 20px">
                         <strong><%=data.toName%>, &nbsp; <%=data.hi%> </strong>
                          </p>
                           <p><%=data.declineContent%></p>
                           <p style="padding: 15px;"><%=data.declineReason%></p>
                           <p><%=data.declineContent1%></p>
                         <%
                         } %>
                      <div>
                     <br />
                  </td>
                </tr>
              </tbody>
            </table>
          </td>
        </tr>
      </tbody>
    </table>
  </body>
</html>
<%- include('../_layout/foot') %>

