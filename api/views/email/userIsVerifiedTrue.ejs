<%- include('../_layout/head') %>

<html>
  <meta
    name="viewport"
    content="width=device-width, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0, user-scalable=no"
  />
  <head>
    <style>
      table,
      td,
      p {
        font-family: 'PingFangHK', Helvetica, Arial, sans-serif;
        font-size: 16px;
        line-height: 24px;
        margin-bottom: 20px;
      }
      body {
        background-color: #ffff;
        padding: 16;
      }
    </style>
  </head>
  <body>
    <table
      cellspacing="0"
      cellpadding="0"
      style="padding: 2px; margin: 0 auto; background-color: #f9f9f9"
      width="600px"
    >
      <tbody style="background-color: #ffffff">
        <tr>
          <td style="padding-left: 25px; margin-bottom: 30px">
            <p
              style="
                color: #2d2d2d;
                font-size: 16px;
                line-height: 24px;
                margin-bottom: 16px;
              "
            >
              <br />

              <% if (data.user.firstName||data.user.lastName) { %>
              <strong><%-data.user.firstName%> <%-data.user.lastName%>:</strong>
              <% } %> <% if (!data.user.firstName&&!data.user.lastName) { %>
              <strong><%-data.user.username%>:</strong> <% } %>
            </p>
            <p><%-data.message%></p>
            <br />
            <p
              style="
                color: #2d2d2d;
                font-size: 16px;
                line-height: 24px;
                margin-bottom: 30px;
              "
            >
              <% if (data.client.email) { %> <%-data.client_email_label%> :
              <%-data.client.email%> <% } %>
              <br />
              <% if (data.client.firstName||data.client.lastName) { %>
              <%-data.client_name_label%>: <%-data.client.firstName%>
              <%-data.client.lastName%> <% } %> <% if
              (!data.client.firstName&&!data.client.lastName) { %>
              <%-data.client_name_label%> : <%-data.client.username%> <% } %>
              <br />
              <% if (data.client.phone) { %> <%-data.client_phone_label%> :
              <%-data.client.phone%> <% } %>
            </p>
          </td>
        </tr>
      </tbody>
    </table>
  </body>
</html>

<%- include('../_layout/foot') %>
